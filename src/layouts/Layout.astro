---
import "../styles/global.css";
import creandoWordmark from "../assets/logos/creando-horizontal.svg";
import stimuleringsfondsLogoUrl from "../assets/logos/stimuleringsfonds.svg?url";
import ogDefault from "../assets/og.png";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Creando Futuronan",
  description = "A practical school for design & digital culture in Aruba.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogDefault.src} />
    <meta name="theme-color" content="#003CE5" />

    <title>{title}</title>
  </head>
  <body class="bg-[--color-bg] text-black font-sans antialiased">
    <header
      class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 flex items-center justify-between"
    >
      <a
        href="/"
        class="flex items-center gap-3"
        aria-label="Creando Futuronan — Home"
      >
        <img
          src={creandoWordmark.src}
          alt="Creando Futuronan"
          class="h-7"
          width="168"
          height="28"
          loading="eager"
          decoding="async"
        />
      </a>
      <nav class="flex items-center gap-6 text-sm">
        <a href="/spark" class="hover:underline">Spark</a>
        <a href="/sustain" class="hover:underline">Sustain</a>
        <a href="/resources" class="hover:underline">Resources</a>
        <a href="/about" class="hover:underline">About</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <div
      class="brand-divider mt-20"
      role="img"
      aria-label="Brand decorative line"
    >
    </div>

    <footer class="border-t border-black/10">
      <div
        class="container mx-auto px-4 sm:px-6 lg:px-8 py-10 grid gap-6 md:grid-cols-3 text-sm"
      >
        <div>
          <div class="font-semibold">Creando Futuronan</div>
          <p class="text-black/70 mt-1">
            Design & digital culture from the islands, for the islands.
          </p>
          <div class="mt-3 flex flex-wrap items-center gap-2 sm:gap-3">
            <p class="text-black/60 text-sm leading-snug">
              Co-funded by <span class="font-medium"
                >Creative Industries Fund NL</span
              >.
            </p>
            <a
              href="https://stimuleringsfonds.nl/"
              target="_blank"
              rel="noopener"
              aria-label="Stimuleringsfonds Creatieve Industrie"
              class="shrink-0"
            >
              <img
                src={stimuleringsfondsLogoUrl}
                alt="Stimuleringsfonds Creatieve Industrie"
                class="h-4 w-auto align-middle"
                loading="lazy"
                decoding="async"
              />
            </a>
          </div>
        </div>
        <div class="space-y-2">
          <div class="font-semibold">Links</div>
          <div class="flex gap-4">
            <a href="/spark" class="hover:underline">Spark</a>
            <a href="/sustain" class="hover:underline">Sustain</a>
            <a href="/resources" class="hover:underline">Resources</a>
            <a href="/about" class="hover:underline">About</a>
          </div>
        </div>
        <div class="space-y-2">
          <div class="font-semibold">Contact</div>
          <a class="hover:underline" href="mailto:hello@creandofuturonan.org"
            >hello@creandofuturonan.org</a
          >
          <div class="text-black/70">Instagram · @radical.data</div>
        </div>
      </div>
      <div class="text-center text-xs text-black/60 pb-8">
        © {new Date().getFullYear()} Creando Futuronan
      </div>
    </footer>
  </body>
</html>
