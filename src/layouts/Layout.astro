---
import "../styles/global.css";
import ogDefault from "../assets/og.png";
import { ViewTransitions } from 'astro:transitions';
import { Image } from "astro:assets";
import creativeIndustriesLogo from "../../public/logos/creative-industries.svg";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Creando Futuronan",
  description = "A practical school for design & digital culture in Aruba.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogDefault.src} />
    <meta name="theme-color" content="#003CE5" />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-[--color-bg] text-black font-sans antialiased">
    <header
      class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 flex items-center justify-between"
    >
      <a
        href="/"
        class="flex items-center gap-3"
        aria-label="Creando Futuronan — Home"
      >
        <img
          src="/logos/creando-horizontal.svg"
          alt="Creando Futuronan"
          class="h-7"
          width="168"
          height="28"
          loading="eager"
          decoding="async"
        />
      </a>
      <nav class="flex items-center gap-6 text-sm">
        <a href="/spark" class="hover:underline focus-ring focus-ring-spark flex items-center gap-2">
          <span class="stream-indicator stream-indicator-spark"></span>
          Spark
        </a>
        <a href="/sustain" class="hover:underline focus-ring focus-ring-sustain flex items-center gap-2">
          <span class="stream-indicator stream-indicator-sustain"></span>
          Sustain
        </a>
        <a href="/about" class="hover:underline focus-ring">About</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <div
      class="brand-divider mt-20"
      role="img"
      aria-label="Brand decorative line"
    >
    </div>

    <footer class="border-t border-black/10">
      <div
        class="container mx-auto px-4 sm:px-6 lg:px-8 py-10 grid gap-6 md:grid-cols-3 text-sm"
      >
        <div>
          <div class="font-semibold">Creando Futuronan</div>
          <p class="text-black/70 mt-1">
            Design & digital culture from the islands, for the islands.
          </p>
          <div class="mt-3">
            <p class="text-black/60 text-sm leading-snug mb-2">
              Co-funded by <span class="font-medium"
                >Creative Industries Fund NL</span
              >.
            </p>
            <a
              href="https://stimuleringsfonds.nl/"
              target="_blank"
              rel="noopener"
              aria-label="Stimuleringsfonds Creatieve Industrie"
              class="inline-block hover:opacity-80 transition-opacity"
            >
              <Image
                src={creativeIndustriesLogo}
                alt="Stimuleringsfonds Creatieve Industrie"
                class="h-8 w-auto align-middle max-w-[200px]"
                loading="lazy"
                decoding="async"
                width={200}
                height={40}
              />
            </a>
          </div>
        </div>
        <div class="space-y-2">
          <div class="font-semibold">Programs</div>
          <div class="flex flex-col gap-2">
            <a href="/spark" class="hover:underline focus-ring focus-ring-spark flex items-center gap-2">
              <span class="stream-indicator stream-indicator-spark"></span>
              Spark
            </a>
            <a href="/sustain" class="hover:underline focus-ring focus-ring-sustain flex items-center gap-2">
              <span class="stream-indicator stream-indicator-sustain"></span>
              Sustain
            </a>
            <a href="/about" class="hover:underline focus-ring">About</a>
          </div>
        </div>
        <div class="space-y-2">
          <div class="font-semibold">Connect</div>
          <a class="hover:underline focus-ring" href="mailto:hello@creandofuturonan.org"
            >hello@creandofuturonan.org</a
          >
          <div class="flex items-center gap-2">
            <a 
              href="https://wa.me/2975689420" 
              target="_blank" 
              rel="noopener"
              class="hover:underline focus-ring flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              +297 568 9420
            </a>
          </div>
          <div class="flex items-center gap-2">
            <a 
              href="https://instagram.com/radical.data" 
              target="_blank" 
              rel="noopener"
              class="hover:underline focus-ring flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
