---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Creando Futuronan",
  description = "A practical school for design & digital culture in the Dutch Caribbean.",
} = Astro.props;
const og = "/og.jpg";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={og} />
    <meta name="theme-color" content="#000000" />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-[#F2F2F2] text-black font-sans antialiased">
    <header
      class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 flex items-center justify-between"
    >
      <a href="/" class="font-semibold tracking-tight text-lg"
        >Creando Futuronan</a
      >
      <nav class="flex items-center gap-6 text-sm">
        <a href="/spark" class="hover:underline">Spark</a>
        <a href="/sustain" class="hover:underline">Sustain</a>
        <a href="/resources" class="hover:underline">Resources</a>
        <a href="/about" class="hover:underline">About</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-20 border-t border-black/10">
      <div
        class="container mx-auto px-4 sm:px-6 lg:px-8 py-10 grid gap-6 md:grid-cols-3 text-sm"
      >
        <div>
          <div class="font-semibold">Creando Futuronan</div>
          <p class="text-black/70 mt-1">
            Design & digital culture from the islands, for the islands.
          </p>
        </div>
        <div class="space-y-2">
          <div class="font-semibold">Links</div>
          <div class="flex gap-4">
            <a href="/spark" class="hover:underline">Spark</a>
            <a href="/sustain" class="hover:underline">Sustain</a>
            <a href="/resources" class="hover:underline">Resources</a>
            <a href="/about" class="hover:underline">About</a>
          </div>
        </div>
        <div class="space-y-2">
          <div class="font-semibold">Contact</div>
          <a class="hover:underline" href="mailto:creando@radicaldata.org"
            >creando@radicaldata.org</a
          >
          <div class="text-black/70">Instagram · @radical.data</div>
        </div>
      </div>
      <div class="text-center text-xs text-black/60 pb-8">
        © {new Date().getFullYear()} Creando Futuronan
      </div>
    </footer>
  </body>
</html>
