---
interface Props {
  items: { name: string; href?: string }[];
}
const { items } = Astro.props;
---

<section class="py-10 lg:py-14 border-t border-black/10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight">Partners</h2>
    <div class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {
        items.map((p) => (
          <a
            href={p.href ?? "/about#partners"}
            class="rounded-xl border border-black/10 bg-white p-5 hover:bg-black/5"
          >
            <div class="font-medium">{p.name}</div>
          </a>
        ))
      }
    </div>
  </div>
</section>
