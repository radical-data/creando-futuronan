---
import { normaliseLocale, useTranslations } from "../../i18n/utils";
import type { Lang } from "../../i18n/ui";

const lang: Lang = normaliseLocale(Astro.currentLocale);
const t = useTranslations(lang);
---

<section class="py-12 lg:py-16 border-t border-black/10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="h2">{t("home.whyCreando")}</h2>
      <p class="mt-2 text-black/70 max-w-2xl mx-auto">
        {t("home.whyCreandoDesc")}
      </p>
    </div>
    
    <div class="grid gap-8 md:grid-cols-3">
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[--color-spark/10] flex items-center justify-center">
          <div class="w-8 h-8 rounded-full bg-[--color-spark]"></div>
        </div>
        <h3 class="h3 mb-3">{t("home.fromHere")}</h3>
        <p class="text-black/75">
          {t("home.fromHereDesc")}
        </p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[--color-sustain/10] flex items-center justify-center">
          <div class="w-8 h-8 rounded-full bg-[--color-sustain]"></div>
        </div>
        <h3 class="h3 mb-3">{t("home.handsOn")}</h3>
        <p class="text-black/75">
          {t("home.handsOnDesc")}
        </p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[--color-brand]/10 flex items-center justify-center">
          <div class="w-8 h-8 rounded-full bg-[--color-brand]"></div>
        </div>
        <h3 class="h3 mb-3">{t("home.partSchool")}</h3>
        <p class="text-black/75">
          {t("home.partSchoolDesc")}
        </p>
      </div>
    </div>
  </div>
</section>
