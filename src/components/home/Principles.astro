---
interface Props {
  items: { title: string; desc: string }[];
}
const { items } = Astro.props;
---

<section class="py-12 lg:py-16 border-t border-black/10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl sm:text-3xl font-semibold tracking-tight">
      Vision & approach
    </h2>
    <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      {
        items.map((i) => (
          <div class="rounded-2xl border border-black/10 bg-white p-5">
            <div class="font-semibold">{i.title}</div>
            <p class="mt-2 text-sm text-black/75">{i.desc}</p>
          </div>
        ))
      }
    </div>
    <a
      href="/about"
      class="inline-flex items-center gap-2 mt-6 text-sm font-medium hover:underline"
      >Read our story â†’</a
    >
  </div>
</section>
