---
interface Props {
  program: 'spark' | 'sustain';
  whatsappNumber: string;
  additionalInfo?: string;
}

const { program, whatsappNumber, additionalInfo } = Astro.props;

const programInfo = {
  spark: {
    title: 'Join Creando Spark',
    subtitle: 'For young people aged 12–18',
    steps: [
      'Message us on WhatsApp to express interest',
      'We\'ll guide you through the joining process',
      'Come ready to create and experiment!'
    ],
    cta: 'Join Spark',
    color: 'var(--color-spark)'
  },
  sustain: {
    title: 'Apply to Creando Sustain', 
    subtitle: 'For young creatives aged 18–30',
    steps: [
      'Attend our intro session on Sat, 18 Oct — 11:00 at RAA!',
      'Submit a short motivation letter or video',
      'We\'ll review and get back to you'
    ],
    cta: 'Express Interest',
    color: 'var(--color-sustain)'
  }
};

const info = programInfo[program];
const whatsappUrl = `https://wa.me/${whatsappNumber.replace(/[^\d]/g, '')}`;
---

<div class="application-section p-6 sm:p-8 rounded-3xl border-2 border-black/10 bg-gradient-to-br from-white to-gray-50">
  <div class="text-center mb-8">
    <h3 class="text-2xl font-bold mb-2" style={`color: ${info.color};`}>
      {info.title}
    </h3>
    <p class="text-black/70">{info.subtitle}</p>
  </div>

  <!-- Application Steps -->
  <div class="mb-8">
    <h4 class="text-lg font-semibold mb-4 text-center">How to Apply</h4>
    <div class="space-y-4">
      {info.steps.map((step, index) => (
        <div class="flex items-start gap-4">
          <div 
            class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center text-white font-bold text-sm"
            style={`background: ${info.color};`}
          >
            {index + 1}
          </div>
          <p class="text-black/75 pt-1">{step}</p>
        </div>
      ))}
    </div>
  </div>

  <!-- WhatsApp CTA -->
  <div class="text-center">
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-3 px-6 sm:px-8 py-3 sm:py-4 rounded-full text-white font-semibold text-base sm:text-lg hover:scale-105 transition-transform duration-200 shadow-lg w-full sm:w-auto justify-center"
      style={`background: ${info.color};`}
      aria-label={`${info.cta} for ${program} program via WhatsApp`}
    >
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
      </svg>
      {info.cta} on WhatsApp
    </a>
    <p class="text-sm text-black/60 mt-3">
      WhatsApp: {whatsappNumber}
    </p>
  </div>

  {additionalInfo && (
    <div class="mt-6 p-4 rounded-2xl border border-black/10 bg-white">
      <p class="text-sm text-black/75">{additionalInfo}</p>
    </div>
  )}
</div>
