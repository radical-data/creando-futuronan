---
import SiteLayout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import Programmes from "../components/home/Programmes.astro";
import Partners from "../components/home/Partners.astro";
import ClosingCTA from "../components/home/ClosingCTA.astro";
import WhatsHappening from "../components/home/WhatsHappening.svelte";
import heroImage from "../assets/hero.jpg";

const headline = "Building futures from here, not elsewhere.";
const sub =
  "Creando Futuronan is a practical school for design and digital culture in Aruba. We equip young people and artists with the tools to imagine, build, and sustain futures rooted in Caribbean realities.";

const programmes = [
  {
    title: "Creando Spark",
    age: "Ages 12–18",
    blurb:
      "A creative playground for coding, AI, and design. Learn, experiment, make cool stuff, try wild ideas and have fun with friends while building your own ideas.",
    href: "/spark",
  },
  {
    title: "Creando Sustain",
    age: "Ages 18–28",
    blurb:
      "A practical school where young creatives learn to imagine, build, and sustain futures, while gaining the skills, networks, and tools to work and grow as creative professionals in the Caribbean.",
    href: "/sustain",
  },
];

const partnerCards = [
  {
    name: "Radical Data",
    href: "/about#partners",
    logo: "/logos/radical-data.png",
    blurb:
      "Studio, educational platform & community repurposing tech for liberation + joy.",
  },
  {
    name: "Plataforma Aruba",
    href: "/about#partners",
    logo: "/logos/plataforma-aruba.png",
    blurb:
      "Arts organisation rooted in research, education, and community in Aruba.",
  },
  {
    name: "Brenchie's Lab",
    href: "/about#partners",
    logo: "/logos/brenchies-lab.png",
    blurb: "Public access maker-space in Aruba. ",
  },
  {
    name: "AFARAI",
    href: "/about#partners",
    logo: "/logos/afarai.png",
    blurb:
      "Architecture studio working at the intersection of spatial design, research and art.",
  },
  {
    name: "Metabolic Foundation",
    href: "/about#partners",
    logo: "/logos/metabolic.png",
    blurb: "Public access maker-space in Aruba. ",
  },
  {
    name: "Counter Narratives",
    href: "/about#partners",
    logo: "/logos/counter-narratives.svg",
    blurb:
      "Collaborative multimedia platform for local oral (hi)stories on the ABC-SSS islands and the diaspora.",
  },
  {
    name: "Creative Industries Fund NL",
    href: "https://stimuleringsfonds.nl/",
    logo: "/logos/stimuleringsfonds.png",
    blurb:
      "National cultural fund supporting design, architecture, and digital culture projects.",
  },
];

// toggle this on/off per cycle:
const openCall = {
  isOpen: false,
  title: "Applications open for Spark & Sustain",
  deadlineISO: "2025-10-30T23:59:00-04:00",
  applyLinks: [
    { label: "Apply to Spark", href: "/spark#apply" },
    { label: "Apply to Sustain", href: "/sustain#apply" },
  ],
};

const events = [
  {
    title: "Creando Spark: Info Session",
    island: "Aruba",
    dateISO: "2025-10-11T10:00:00-04:00",
    href: "/spark#info",
  },
  {
    title: "Creando Spark: Info Session",
    island: "Aruba",
    dateISO: "2025-10-18T10:00:00-04:00",
    href: "/spark#info",
  },
  {
    title: "Creando Sustain: Info Session (Online)",
    island: "Online",
    dateISO: "2025-10-18T15:00:00-04:00",
    href: "/sustain#info",
  },
];
---

<SiteLayout title="Creando Futuronan">
  <Hero
    headline={headline}
    sub={sub}
    ctas={[
      { label: "Join Spark (12–18)", href: "/spark" },
      { label: "Apply to Sustain (18–28)", href: "/sustain" },
    ]}
    image={heroImage}
  />

  <!-- Programmes -->
  <Programmes cards={programmes} />

  <!-- What’s happening now (Open Call or Events) -->
  <WhatsHappening client:load openCall={openCall} events={events} />

  <!-- Vision & Approach -->
  <!-- <Principles items={principles} /> -->

  <!-- Partners -->
  <Partners items={partnerCards} />

  <!-- Closing CTA -->
