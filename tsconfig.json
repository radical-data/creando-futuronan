{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src/types/**/*", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "types": ["astro/client"],
    "skipLibCheck": true
  }
}
